datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  Admin
  Intania106
  Intania107
  Testing
  Dummy
  Unknown
}

enum Roles {
  User
  Registration
  Plan
  CoreTeam
  COOP
  Admin
  Activity
  Board
  IT
  PR
  RegistrationHouse
  Stamp
  HeadHouse
}

model User {
  userId          String     @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  nickname        String?
  studentId       String     @unique
  telNo           String?
  instagram       String?
  profilePicture  String?
  lineAccessToken String?
  lineUsername    String?
  lineUserId      String?
  ticketToken     String?
  status          Status     @default(Unknown)
  roles           Roles[]    @default([User])
  Group           Group?     @relation(fields: [groupId], references: [groupId])
  groupId         String?    @db.ObjectId
  Post            Post[]
  GamePlay        GamePlay[]
  Comment         Comment[]
  stampCount      Int        @default(0)
  stampCollected  Json[]
}

type Contacts {
  name   String
  phone  String
  remark String?
}

model Group {
  groupId      String         @id @default(auto()) @map("_id") @db.ObjectId
  houseName    String
  shortName    String
  group        String
  lineGroup    String?
  description  String?
  score        Int?           @default(0)
  contacts     Contacts[]
  members      User[]
  posts        Post[]
  ScoreHistory ScoreHistory[]
  updatedAt    DateTime?      @default(now())
}

model Post {
  postId      String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  content     String
  isGlobal    Boolean? @default(false)

  author   User   @relation(fields: [authorId], references: [userId])
  authorId String @db.ObjectId

  group   Group?  @relation(fields: [groupId], references: [groupId])
  groupId String? @db.ObjectId

  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  commentId String @id @default(auto()) @map("_id") @db.ObjectId
  content   String

  Post   Post   @relation(fields: [postId], references: [postId])
  postId String @db.ObjectId

  author   User   @relation(fields: [authorId], references: [userId])
  authorId String @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  gameId         String      @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String?
  choices        Choice[]
  hint           String
  scoring        ScoringMode @default(Equal)
  maxParticipant Int?
  maxScore       Int?
  isIndividual   Boolean?    @default(false)
  createdAt      DateTime    @default(now())
  expiresAt      DateTime
  GamePlay       GamePlay[]
}

type Choice {
  choiceId String
  text     String
}

enum ScoringMode {
  Equal
  Linear
  Exponential
  Logarithmic
  FirstBlood
}

model GamePlay {
  gamePlayId String   @id @default(auto()) @map("_id") @db.ObjectId
  game       Game     @relation(fields: [gameId], references: [gameId])
  gameId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [userId])
  userId     String   @db.ObjectId
  score      Int?
  createdAt  DateTime @default(now())
}

model ScoreHistory {
  scoreId     String   @id @default(auto()) @map("_id") @db.ObjectId
  Group       Group    @relation(fields: [groupId], references: [groupId])
  groupId     String   @db.ObjectId
  score       Int
  info        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum StampTag {
  Academic
  Sport
  Art
  CSR
  Other
}

model Stamp {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  stampId          String   @unique
  clubName         String
  tag              StampTag
  objective        String   @default("")
  previousActivity String   @default("")
  headquarter      String   @default("")
  logo             String?
  slugName         String   @unique
  timestamp        Int
}

model Faq {
  faqId    String @id @default(auto()) @map("_id") @db.ObjectId
  event    String
  question String
  answer   String
  priority Int?   @default(0)
}
